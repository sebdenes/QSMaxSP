{
  "name": "project-quicksizer",
  "version": "0.2.0",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "node --import tsx --test \"tests/**/*.unit.test.ts\"",
    "test:integration": "node scripts/runIntegrationTests.cjs",
    "db:generate": "prisma generate",
    "db:migrate": "prisma db push",
    "db:migrate:dev": "prisma db push",
    "db:push": "prisma db push",
    "db:seed": "node --import tsx prisma/seed.ts",
    "db:init": "node scripts/initSqliteDb.cjs",
    "db:init:reset": "node scripts/initSqliteDb.cjs --reset",
    "import:workbook": "tsx scripts/importWorkbook.ts",
    "desktop:prepare": "node scripts/initSqliteDb.cjs --db-file prisma/desktop.db --reset && next build",
    "desktop:start": "npm run desktop:prepare && npx electron .",
    "desktop:dist:mac": "npm run desktop:prepare && npx electron-builder --mac zip --publish never",
    "desktop:dist:win": "npm run desktop:prepare && npx electron-builder --win portable --publish never",
    "desktop:dist": "npm run desktop:prepare && npx electron-builder --mac zip --win portable --publish never",
    "validate": "npm run typecheck && npm test && npm run test:integration && npm run build"
  },
  "dependencies": {
    "@prisma/client": "5.22.0",
    "next": "^15.5.12",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@types/node": "22.9.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "prisma": "5.22.0",
    "tsx": "^4.21.0",
    "typescript": "5.6.3"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "build": {
    "appId": "com.qsmaxsp.app",
    "productName": "QSMaxSP",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "app/**/*",
      "components/**/*",
      "lib/**/*",
      "data/**/*",
      "prisma/**/*",
      ".next/**/*",
      "public/**/*",
      "next.config.ts",
      "package.json",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
